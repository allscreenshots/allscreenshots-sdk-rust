{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":preserveSemverRanges"
  ],
  "schedule": [
    "every monday"
  ],
  "timezone": "America/New_York",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Group minor and patch updates together",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "minor-and-patch",
      "automerge": true
    },
    {
      "description": "Separate PRs for major updates",
      "matchUpdateTypes": ["major"],
      "groupName": null,
      "automerge": false
    },
    {
      "description": "Automerge patch updates that pass CI",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Group Rust toolchain updates",
      "matchPackageNames": ["rust"],
      "matchManagers": ["rust"],
      "groupName": "rust-toolchain",
      "automerge": false
    },
    {
      "description": "Group dev dependencies",
      "matchDepTypes": ["dev-dependencies"],
      "groupName": "dev-dependencies",
      "automerge": true
    },
    {
      "description": "Pin GitHub Actions versions",
      "matchManagers": ["github-actions"],
      "pinDigests": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "rebaseWhen": "conflicted",
  "rust": {
    "enabled": true
  }
}
